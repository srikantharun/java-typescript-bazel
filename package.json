{
  "name": "enterprise-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Enterprise-scale Java/TypeScript Bazel monorepo showcasing advanced build patterns",
  "workspaces": [
    "typescript/packages/*"
  ],
  "scripts": {
    "build": "bazel build //...",
    "test": "bazel test //...",
    "test:java": "bazel test //java/...",
    "test:typescript": "bazel test //typescript/...",
    "clean": "bazel clean",
    "format": "bazel run @buildifier_prebuilt//:buildifier",
    "analyze": "bazel run //build_tools:analyze_build"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^20.17.10",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.3"
  }
}
